<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7">

    <LinearLayout
        android:background="#00CCFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/ic_arrow_back_black"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Tebengan"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/people" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/jenis"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/jenis"
                    android:layout_marginBottom="5dp"></Spinner>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calist"
                    android:textStyle="bold"
                    android:text="Jumlah Kursi"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/jml_kursi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calist"
                    android:textStyle="bold"
                    android:text="Keterangan Kendaraan"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/keterangan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp"
                    android:hint="Nama Kendaraan, Type, Plat Nomor Kendaraan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calist"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="Waktu"/>

                <EditText
                    android:id="@+id/jam"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:textSize="14sp"
                    android:hint="Jam"
                    android:drawableRight="@drawable/time"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/batal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="#d3d3d3"
                    android:text="BATAL"
                    android:textAllCaps="false"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/buat"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/skyblue"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="1dp"
                    android:text="BUAT"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
